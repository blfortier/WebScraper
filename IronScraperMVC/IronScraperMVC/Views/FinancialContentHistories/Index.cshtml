@model IEnumerable<IronScraperMVC.Models.FinancialContentHistory>

@{
    ViewBag.Title = "Index";
}
<script src="//code.jquery.com/jquery.min.js"></script>

<script src="~/Scripts/paginathing.js"></script>


<h2>Index</h2>

<table id="pagination" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceChange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangePercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="stocks">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceChange)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangePercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

<div>
    <button>@Html.ActionLink("Clear Stock History", "ClearStockHistory", "FinancialContentHistories")</button>
</div>

<script>
    $('#stocks').paginathing({
        perPage: 30,
    });
</script>