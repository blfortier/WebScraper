@model IEnumerable<MvcSeleniumScraper.Models.StockHistory>

@{
    ViewBag.Title = "Index";
}

<script src="//code.jquery.com/jquery.min.js"></script>
<script src="~/Scripts/paginathing.js"></script>

<h2 class="jumbotron">Yahoo Stock History</h2>
<button>@Html.ActionLink("Current Data", "Index", "Stocks")</button>

<table id="pagnation" class="table table-hover display">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th class="text-center">
                Last Price
            </th>
            <th class="text-center">
                Change Percent
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th class="text-center">
                Average Volume
            </th>
            <th class="text-center">
                Market Cap
            </th>
        </tr>
    </thead>
    <tbody id="yahoo" style="text-align: center">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChangePercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvgVol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketCap)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Symbol })
                </td>
            </tr>
        }
    </tbody>

</table>

<div>
    <button>@Html.ActionLink("Clear Stock History", "ClearStockHistory", "StockHistories")</button>
</div>

<script>
    $('#yahoo').paginathing({
        perPage: 10,
    });
</script>
