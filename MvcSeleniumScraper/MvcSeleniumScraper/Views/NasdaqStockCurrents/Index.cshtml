@model IEnumerable<MvcSeleniumScraper.Models.NasdaqStockCurrent>

@{
    ViewBag.Title = "Index";
}

<h2 class=" = jumbotron">
    Nasdaq's Most Active Stocks Current
</h2>
<button>@Html.ActionLink("Update Stock Info", "NewScrape", "NasdaqStockCurrents")</button>
<button>@Html.ActionLink("Stock History", "Index", "NasdaqStockHistories")</button>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Change)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Change)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Symbol }) 
            </td>
        </tr>
        }
    </tbody>
</table>

