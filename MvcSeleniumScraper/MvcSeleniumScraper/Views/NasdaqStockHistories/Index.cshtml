@model IEnumerable<MvcSeleniumScraper.Models.NasdaqStockHistory>

@{
    ViewBag.Title = "Index";
}

<script src="//code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/paginathing.js"></script>

<h2 class="jumbotron">
    Nasdaq's Most Active Stocks History
</h2>

<p>
    <button>@Html.ActionLink("Current Data", "Index", "NasdaqStockCurrents")</button>
</p>
<table id="pagnation" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Change)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="nasdaq">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Change)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button>@Html.ActionLink("Clear Stock History", "ClearStockHistory", "NasdaqStockHistories")</button>
</div>

<script>
    $('#nasdaq').paginathing({
        perPage: 20,
    });
</script>